<Window x:Class="VAC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VAC"
        xmlns:views="clr-namespace:VAC.Views"
        xmlns:vm="clr-namespace:VAC.ViewModels"
        Style="{DynamicResource CustomWindowStyle}"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Icon="/Assets/Icon/Icon.ico"
        Title="{Binding Title}"
        Height="550"
        Width="450">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <TabControl>
            <TabItem Header="Map">
                <views:MapsView/>
            </TabItem>
            <TabItem Header="Characters">
                <views:CharactersView/>
            </TabItem>
            <TabItem Header="Challenges">
                <views:ChallengesView/>
            </TabItem>
            <TabItem Header="About">
                <views:AboutView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
